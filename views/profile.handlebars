<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
 {{#if user.recipes.length}}
  <div class="col-md-6 project-list">
    <h3>All Recipes:</h3>
    {{#each user.recipes as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
        <img src="/assets/uploads/{{recipe.photo}}" alt={{recipe.name}}>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


<a href="api/add-recipe">Add Recipe</a>
 
</div>
<script src="/js/profile.js"></script>
