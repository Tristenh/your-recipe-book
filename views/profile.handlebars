  <div class="row">
  {{#if UserFavRecipes}}

  <div class="col-md-6 project-list">
    <h3>Favourite recipes:</h3>

    {{#each UserFavRecipes}}
    <div class="row mb-2">
      <div class="col-md-8">
        <img
        src='/images/{{this.filename}}'
        class='rounded py-9 px-9 d-flex align-content-center'
        height='130px'
        width='216px'
        alt='{{this.filename}}'
      />
        <a href="https://www.google.com.au/">{{this.name}}</a>
      </div>
      <div class="col-md-4">
        <button class="delBut btn btn-sm btn-danger" user-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}

      </div>
  {{/if}}

  <div class="col-md-6 project-list">
    <h3>User recipes:</h3>
    {{#each recipes}}
    <div class="row mb-2">
      <div class="col-md-8">
        <img
        src='/images/{{this.filename}}'
        class='rounded py-9 px-9 d-flex align-content-center'
        height='130px'
        width='216px'
        alt='{{this.filename}}'
      />
        <a href="https://www.google.com.au/">{{this.name}}</a>
      </div>
      <div class="col-md-4">
        <button class="delBut btn btn-sm btn-danger del-per" user-id1="{{id}}">DELETE</button>
      </div>
    </div>

   
    {{/each}}

  </div>

