
 <div class='banner'>
        <img src='/images/banner.jpg' alt='yummy pizza' />
        <form class='form-inline my-2 my-lg-0'>
          <input
            class='form-control mr-sm-2'
            type='search'
            placeholder='Search'
            aria-label='Search'
          />
          <button class='btn my-2 my-sm-0 search-btn' type='submit'><i
              class='fa fa-search'
            ></i></button>
        </form>
      </div>
<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{user.name}}!</h2>
  </div>

<div>
  <h2>Welcome, {{name}}!</h2>
  <a class='Addrep' href='/api/add-recipe'>Add Recipe</a>
</div>
<br />

{{#if recipes}}
  <div class='recipe-list col-sm'>
    <h3>User Recipes:</h3>
    {{#each recipes as |recipe|}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <a href='/recipe/{{photo}}'><h4>{{name}}</h4>
            <img
              src='/assets/uploads/{{photo}}'
              class='rounded py-9 px-9 d-flex align-content-center'
              height='350px'
              width='500px'
              alt={{name}}
            /></a>
        </div>
        <div class='col-md-4'>
          <button
            class='btn btn-sm btn-danger del-per'
            data-id='{{recipe.id}}'
          ><i class='fa-solid fa-trash'></i></button>
        </div>

      </div>
    {{/each}}
  </div>
{{/if}}

{{#if UserFavRecipes}}

  <div class='recipe-list col-sm'>
    <h3>Favourite recipes:</h3>

    {{#each UserFavRecipes}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <a href='/recipe/{{photo}}'><h4>{{name}}</h4>
            <img
              src='/assets/uploads/{{photo}}'
              class='rounded py-9 px-9 d-flex align-content-center'
              height='350px'
              width='500px'
              alt='{{name}}'
            /></a>
          <a href='https://www.google.com.au/'>{{recipe.name}}</a>
        </div>
        <div class='col-md-4'>
          <button class='delBut btn btn-sm btn-danger' user-id='{{id}}'><i
              class='fa-solid fa-trash'
            ></i></button>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<br />

<script src='/js/profile.js'></script>