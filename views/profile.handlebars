<h2>Welcome, {{name}}!</h2>
<br />

{{#if recipes}}
  <div class='recipe-list col-sm'>
    <h3>User Recipes:</h3>
    {{#each recipes as |recipe|}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <a href='/recipe/{{photo}}'><h4>{{name}}</h4>
            <img
              src='/assets/uploads/{{photo}}'
              class='rounded py-9 px-9 d-flex align-content-center'
              height='130px'
              width='216px'
              alt={{name}}
            /></a>
        </div>
        <div class='col-md-4'>
          <button
            class='btn btn-sm btn-danger del-per'
            data-id='{{recipe.id}}'
          >DELETE</button>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if UserFavRecipes}}

  <div class='recipe-list col-sm'>
    <h3>Favourite recipes:</h3>

    {{#each UserFavRecipes}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <a href='/recipe/{{photo}}'><h4>{{name}}</h4>
            <img
              src='/assets/uploads/{{photo}}'
              class='rounded py-9 px-9 d-flex align-content-center'
              height='130px'
              width='216px'
              alt='{{name}}'
            /></a>
          <a href='https://www.google.com.au/'>{{recipe.name}}</a>
        </div>
        <div class='col-md-4'>
          <button
            class='delBut btn btn-sm btn-danger'
            user-id='{{id}}'
          >DELETE</button>
        </div>
      </div>
    {{/each}}

  </div>
{{/if}}

<br />
<a href='/add-recipe'>Add Recipe</a>

<script src='/js/profile.js'></script>